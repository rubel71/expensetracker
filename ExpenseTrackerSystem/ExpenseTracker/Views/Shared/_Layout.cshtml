<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <script src="~/lib/jquery/jquery.js"></script>
        
        <style type="text/css">
            body {
                padding-top: 70px;
            }
        </style>
    </environment>
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <div class="container">
            
            <a asp-action="Index" asp-controller="Home" class="navbar-brand">Expense Tracker</a>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Home" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Catagories" class="nav-link">Expense Catagory</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Expense" class="nav-link">Expense Details</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="container">
        <p class="text-center">&copy; @DateTime.Now.Year - www.xyz.org</p>
    </footer>
    <environment include="Development">
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
       
    </environment>
    @RenderSection("scripts", false)
</body>
</html>
