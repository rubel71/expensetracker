@model IEnumerable<Expense>
@{
    ViewData["Title"] = "Index";
}
<h2 class="text-center" style="background-color:black;color:forestgreen">Expense Details</h2>

<div class="d-flex justify-content-end mb-1">
    <a asp-action="Create" class="btn btn-outline-primary btn-sm">Add Expense</a>
</div>
<div class="row">
    <div class="col">

        <table class="table table-bordered table-striped table-hover table-sm">
            <thead class="thead-light">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.ItemName)</th>
                    <th>@Html.DisplayNameFor(x => x.Amount)</th>
                    <th>@Html.DisplayNameFor(x => x.ExpenseDate)</th>
                    <th>Expense Catagory</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Amount</td>
                        <td>@item.ExpenseDate.ToShortDateString()</td>
                        <td>@item.Catagory.CatagoryName</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@item.ExpenseId">Edit</a> |

                            <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.ExpenseId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



