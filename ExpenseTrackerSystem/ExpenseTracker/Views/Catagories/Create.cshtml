@model ExpenseTracker.Models.Catagory

@{
    ViewData["Title"] = "Create";
}



<h4>Add Catagory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CatagoryName" class="control-label"></label>
                <input asp-for="CatagoryName" class="form-control" />
                <span asp-validation-for="CatagoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Catagories" class="btn btn-outline-secondary"> Back to list</a>
            </div>
        </form>
    </div>
</div>

